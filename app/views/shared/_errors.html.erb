<% if @event.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <header>
      <h2>Oops! The <%= @event.class.name.titleize.downcase %> could not be saved</h2>
      <h3>Please correct the following <%= pluralize(@event.errors.count, "error") %>:</h3>
    </header>
    <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
