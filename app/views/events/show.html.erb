<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1><%= @event.name %></h1>
    </div>
  </div>

  <div class="row">
    <div class="col-md-3">
      <%= image_for(@event) %>
    </div>

    <div class="col-md-9">
      <h2><%= @event.starts_at %></h2>
      <p><%= @event.description %></p>

      <div class="page-header">
        <h3>Price</h3>
      </div>
      <p><%= format_price(@event) %></p>

      <div class="page-header">
        <h3>Location</h3>
      </div>
      <p><%= @event.location %></p>

      <div class="page-header">
        <h3>Capacity</h3>
      </div>
      <p><%= pluralize(@event.capacity, 'spot') %></p>

      <br>
      <nav>
        <%= link_to("Edit", edit_event_path(@event)) %> |
        <%= link_to("Delete", event_path(@event), method: :delete, data: { confirm: 'Are you sure?' }) %>
      </nav>
    </div>

  </div>
</div>
