<article>
  <header>
    <h1><%= @event.name %></h1>
    <h2><%= @event.starts_at %></h2>
  </header>

  <p>
    <%= @event.description %>
  </p>

  <h3>Price</h3>
  <p>
    <%= format_price(@event) %>
  </p>

  <h3>Location</h3>
  <p>
    <%= @event.location %>
  </p>

</article>

<%= link_to("All Events", root_path) %>
