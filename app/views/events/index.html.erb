<h1>Events</h1>

<% @events.each do |event| %>
  <article>
    <header>
      <h2><%= event.name %></h2>
    </header>
    <!-- <p>
      <%= event.description %>
    </p> -->
    <table>
      <tr>
        <th>Where</th>
        <td><%= event.location %></td>
      </tr>
      <tr>
        <th>Price</th>
        <td><%= event.price %></td>
      </tr>
    </table>
  </article>
<% end %>
